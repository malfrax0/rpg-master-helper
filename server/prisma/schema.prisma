// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @map("_id") 
  email String @unique
  name String
  password String
  administratedGames Game[]
  games CharacterSheet[]
  writtenHistory GameHistory[]
  participations GameEventParticipation[]
}

model Game {
  id String @id @default(uuid()) @map("_id") 
  admin User @relation(fields: [adminId], references: [id])
  adminId String 
  name String
  description String
  characters CharacterSheet[]
  rpgInfo CharacterSheetTemplate @relation(fields: [rpgInfoId], references: [id])
  rpgInfoId String 
  history GameHistory[]
  event GameEvent[]
  isPlaying Boolean
}

model GameHistory {
  id String @id @default(uuid()) @map("_id") 
  user User @relation(fields: [userId], references: [id])
  userId String 
  game Game @relation(fields: [gameId], references: [id])
  gameId String 
  title String
  content String
}

model GameEvent {
  id String @id @default(uuid()) @map("_id") 
  title String
  content String
  game Game @relation(fields: [gameId], references: [id])
  gameId String 
  startAt DateTime
  duration Int
  participations GameEventParticipation[]
}

enum GameEventResponse {
  PARTICIPATE
  MAYBE
  CANNOT
}

model GameEventParticipation {
  id String @id @default(uuid()) @map("_id") 
  event GameEvent @relation(fields: [eventId], references: [id])
  eventId String 
  user User @relation(fields: [userId], references: [id])
  userId String 
  response GameEventResponse @default(MAYBE)

  @@unique([eventId, userId])
}

model CharacterSheet {
  id String @id @default(uuid()) @map("_id") 
  game Game @relation(fields: [gameId], references: [id])
  gameId String 
  user User @relation(fields: [userId], references: [id])
  userId String 
  characterStats CharacterStat[]

  @@unique([gameId, userId])
}

model CharacterStat {
  id String @id @default(uuid()) @map("_id") 
  characterSheet CharacterSheet @relation(fields: [characterSheetId], references: [id])
  characterSheetId String 
  key String
  value String

  @@unique([key, characterSheetId])
}

model CharacterSheetTemplate {
  id String @id @default(uuid()) @map("_id") 
  template Json
  name String
  description String
  games Game[]
}