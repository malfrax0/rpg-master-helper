// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String
  password String
  administratedGames Game[]
  games CharacterSheet[]
  writtenHistory GameHistory[]
  participations GameEventParticipation[]
}

model Game {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  admin User @relation(fields: [adminId], references: [id])
  adminId String @db.ObjectId
  name String
  description String
  characters CharacterSheet[]
  rpgInfo CharacterSheetTemplate @relation(fields: [rpgInfoId], references: [id])
  rpgInfoId String @db.ObjectId
  history GameHistory[]
  event GameEvent[]
}

model GameHistory {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  game Game @relation(fields: [gameId], references: [id])
  gameId String @db.ObjectId
  title String
  content String
}

model GameEvent {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  content String
  game Game @relation(fields: [gameId], references: [id])
  gameId String @db.ObjectId
  startAt DateTime
  duration Int
  participations GameEventParticipation[]
}

enum GameEventResponse {
  PARTICIPATE
  MAYBE
  CANNOT
}

model GameEventParticipation {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  event GameEvent @relation(fields: [eventId], references: [id])
  eventId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  response GameEventResponse @default(MAYBE)

  @@unique([eventId, userId])
}

model CharacterSheet {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  game Game @relation(fields: [gameId], references: [id])
  gameId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  characterStats CharacterStat[]

  @@unique([gameId, userId])
}

model CharacterStat {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  characterSheet CharacterSheet @relation(fields: [characterSheetId], references: [id])
  characterSheetId String @db.ObjectId
  key String
  value String

  @@unique([key, characterSheetId])
}

model CharacterSheetTemplate {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  template Json
  name String
  description String
  games Game[]
}